{
    "name": "typeorm-extension",
    "version": "2.3.0",
    "description": "A library to create/drop database, simple seeding data sets, ...",
    "author": {
        "name": "Peter Placzek",
        "email": "contact@tada5hi.net",
        "url": "https://github.com/tada5hi"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/tada5hi/typeorm-extension.git"
    },
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/types/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/index.js",
            "import": "./dist/esm/index.js",
            "types": "./dist/types/index.d.ts"
        }
    },
    "files": [
        "dist/"
    ],
    "scripts": {
        "build": "rimraf dist && tsc -p tsconfig.cjs.json && tsc -p tsconfig.esm.json",
        "commit": "npx git-cz",
        "test": "cross-env NODE_ENV=test jest --config ./test/jest.config.js",
        "test:coverage": "cross-env NODE_ENV=test jest --config ./test/jest.config.js --coverage",
        "lint": "eslint --ext .js,.vue,.ts ./src",
        "lint:fix": "npm run lint -- --fix",
        "docs:dev": "vitepress dev docs --temp .temp",
        "docs:build": "vitepress build docs --temp .temp",
        "docs:help": "vitepress --help",
        "prepare": "husky install",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "database",
        "create",
        "drop",
        "api",
        "json-api",
        "jsonapi",
        "migration",
        "seeder",
        "seeding",
        "cli"
    ],
    "bin": {
        "typeorm-extension": "dist/index.js"
    },
    "license": "MIT",
    "dependencies": {
        "@faker-js/faker": "^7.6.0",
        "locter": "^0.5.1",
        "rapiq": "^0.6.0",
        "reflect-metadata": "^0.1.13",
        "tsup": "^6.5.0",
        "yargs": "^17.6.2"
    },
    "peerDependencies": {
        "typeorm": "~0.3.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.3.0",
        "@commitlint/config-angular": "^17.3.0",
        "@commitlint/config-conventional": "^17.3.0",
        "@commitlint/cz-commitlint": "^17.3.0",
        "@semantic-release/changelog": "^6.0.1",
        "@semantic-release/commit-analyzer": "^9.0.2",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/github": "^8.0.6",
        "@semantic-release/npm": "^9.0.1",
        "@semantic-release/release-notes-generator": "^10.0.3",
        "@tada5hi/eslint-config-typescript": "^1.0.10",
        "@types/glob": "^8.0.0",
        "@types/jest": "^27.5.0",
        "@types/node": "^18.11.9",
        "@types/yargs": "^17.0.14",
        "better-sqlite3": "^7.6.2",
        "coveralls": "^3.1.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.28.0",
        "husky": "^8.0.2",
        "jest": "^27.5.1",
        "semantic-release": "^19.0.5",
        "ts-jest": "^27.1.4",
        "ts-node": "^10.9.1",
        "typeorm": "^0.3.10",
        "typescript": "^4.9.3",
        "vitepress": "^1.0.0-alpha.29",
        "vue": "^3.2.45"
    },
    "config": {
        "commitizen": {
            "path": "@commitlint/cz-commitlint"
        }
    }
}
